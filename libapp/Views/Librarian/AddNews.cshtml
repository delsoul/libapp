@model libapp.Models.News

@{
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<html>
    <head>
        <title>@ViewBag.Title - добавление новости</title>
    </head>
    <body>
        <h3 class="h3">Добавить новость</h3>
        <br />
        @using (Html.BeginForm("AddNews", "Librarian", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-md-4" }))
        {
            @Html.LabelFor(model => model.Title, "Заголовок")
            <br />
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            <br />
            <br />
            @Html.LabelFor(model => model.Content, "Содержание")
            <br />
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
            <br />
            <br />
            <div class="editor-field">
                <input type="file" name="uploadImage" />
            </div>
            <br />
            <br />
            <input type="submit" value="Добавить" class="btn btn-success" />
        }
    </body>
</html>