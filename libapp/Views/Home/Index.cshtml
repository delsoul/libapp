@model IEnumerable<News>
@using libapp.Models

<html>
<head>
    <title>@ViewBag.Title - главная</title>
</head>
<body>
    <!-- карусель -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Images/banner-2019-3.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/gutenberg_720x326.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/5-excursions2.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- карусель -->
    <!-- последние новости -->
    <div class="row">
        @foreach (News n in Model)
        {

            <div class="col-md-4">
                <h3>@n.Title</h3>
                <p>@n.Content.Substring(0, 150)</p>
                <p><a class="btn btn-default" href="#">Далее &raquo;</a></p>
            </div>
        }
    </div>
    <!-- последние новости -->

</body>
</html>


