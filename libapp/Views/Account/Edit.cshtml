@model libapp.Models.ApplicationUser

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <title>@ViewBag.Title - редактирование пользователя</title>
</head>
<body>
    <h3 class="h3">Редактирование пользователя</h3>
    <div class="form-group">
        <label>id</label>
        <p class="form-control-static text-muted">@Model.Id</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label>Имя</label>
            @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Электронная почта</label>
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Пароль</label>
            <input name="password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Сохранить</button>
        @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
    }
</body>
</html>
